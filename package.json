{
  "name": "market-intel-dashboard",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "concurrently -k -n api,web -c blue,green \"uv run --project apps/api uvicorn main:app --reload --port 4000\" \"pnpm -C apps/web dev\"",
    "dev:api": "uv run --project apps/api uvicorn main:app --reload --port 4000",
    "dev:web": "pnpm -C apps/web dev",
    "review:light": "bash tools/review/light_review.sh",
    "review:deep": "bash tools/review/deep_review.sh",
    "review:release": "bash tools/review/release_review.sh",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.3",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
